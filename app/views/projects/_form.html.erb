<%= render "projects/errors"  %>

<h2 align="center">New Project</h2>

<%= form_for @project do |f| %>
  <p>
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %> <br />
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>
<%= link_to "Project list" %>