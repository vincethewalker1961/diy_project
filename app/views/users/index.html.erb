<%= render "layouts/flash" %>
<div class="container">
  <div class="row toppie">
    <h2 align="center">All Users</h2>
  </div>
    
 <div align="center">
        
           <div align="center">
             <% @users.each do |user| %>
             <div class="col-md-4 col-md-offset-4 well profile-black-white-thin row "<%= cycle('profile-black-white-thin-b', '') %>>
               <p class="descriptionText">User: <%= user.name %> <span class="bigText"><%= user.projects.count %></span></p>
               <p>Email address: <%= user.email %></p>
               <%= link_to "View", user_path(user), class: "btn btn-info bttn" %>
               
                  <%= link_to "Edit", edit_user_path(user), class: "btn btn-warning bttn" %>
                  <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure??"}, 
                                                                      class: "btn btn-danger bttn" %>
                
             </div>
           <% end %>
        </div>
    </div>

</div>